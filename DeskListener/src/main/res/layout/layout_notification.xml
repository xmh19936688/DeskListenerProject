<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_controll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_launcher"
        android:background="@drawable/color_selector"
        />

    <TextView
        android:id="@+id/tv_going_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_controll"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="60dp"
        android:text="@string/flag_record_started_left"
        />

    <TextView
        android:id="@+id/tv_going_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_controll"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="60dp"
        android:text="@string/flag_record_started_right"
        />

    <TextView
        android:id="@+id/tv_file_count"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="60dp"
        android:text="@string/flag_upload_init"
        />
    <TextView
        android:id="@+id/tv_upload_count"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="60dp"
        android:text="@string/flag_upload_init"
        />

</RelativeLayout>